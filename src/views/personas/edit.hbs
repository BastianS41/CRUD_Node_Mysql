<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card text-center">
                <div class="card-header">
                    <h3 class="text-uppercase">Editando Persona</h3>
                </div>
                <div class="card-body">
                    <form action="/edit/{{persona.id}}" method="post">
                        <div class="input-group mt-2">
                            <label for="name" class="input-group-text">Nombre</label>
                            <input type="text" class="form-control" name="name" id="name" value="{{persona.name}}" 
                            placeholder="Ingrese el nombre" autofocus required>
                        </div>
                        <div class="input-group mt-2">
                            <label for="lastName" class="input-group-text">Apellido</label>
                            <input type="text" class="form-control" name="lastName" id="lastName" value="{{persona.lastName}}" 
                            placeholder="Ingrese el apellido" required>
                        </div>
                        <div class="input-group mt-2">
                            <label for="age" class="input-group-text">Edad</label>
                            <input type="number" class="form-control" name="age" id="age" value="{{persona.age}}" 
                            placeholder="Ingrese la edad" required>
                        </div>
                        <div class="form-group mt-4 d-grid gap-2">
                            <button class="btn btn-success" type="submit">Actualizar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>







